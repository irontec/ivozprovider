<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <mapped-superclass name="Ivoz\Provider\Domain\Model\MusicOnHold\MusicOnHoldAbstract" table="music_on_hold_abstract">
    <unique-constraints>
      <unique-constraint name="musicOnHold_name_brand" columns="name,brandId"/>
      <unique-constraint name="musicOnHold_name_company" columns="name,companyId"/>
    </unique-constraints>
    <embedded name="encodedFile" class="Ivoz\Provider\Domain\Model\MusicOnHold\EncodedFile" use-column-prefix="false" />
    <embedded name="originalFile" class="Ivoz\Provider\Domain\Model\MusicOnHold\OriginalFile" use-column-prefix="false" />
    <field name="name" type="string" column="name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="status" type="string" column="status" length="20" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">[enum:pending|encoding|ready|error]</option>
      </options>
    </field>
    <many-to-one field="brand" target-entity="Ivoz\Provider\Domain\Model\Brand\Brand" inversed-by="musicsOnHold" fetch="LAZY">
      <join-columns>
        <join-column name="brandId" referenced-column-name="id" on-delete="CASCADE" nullable="1"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="company" target-entity="Ivoz\Provider\Domain\Model\Company\Company" inversed-by="musicsOnHold" fetch="LAZY">
      <join-columns>
        <join-column name="companyId" referenced-column-name="id" on-delete="CASCADE" nullable="1"/>
      </join-columns>
    </many-to-one>
  </mapped-superclass>
</doctrine-mapping>
