<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <mapped-superclass name="Ivoz\Provider\Domain\Model\BannedAddress\BannedAddressAbstract" table="banned_address_abstract">
    <indexes>
      <index name="bannedAddress_lastTimeBanned" columns="lastTimeBanned"/>
      <index name="bannedAddress_ip_blocker" columns="ip,blocker"/>
    </indexes>
    <field name="ip" type="string" column="ip" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="blocker" type="string" column="blocker" length="50" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">[enum:antiflood|ipfilter]</option>
      </options>
    </field>
    <field name="aor" type="string" column="aor" length="300" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lastTimeBanned" type="datetime" column="lastTimeBanned" nullable="true"/>
    <many-to-one field="brand" target-entity="Ivoz\Provider\Domain\Model\Brand\Brand" fetch="LAZY">
      <join-columns>
        <join-column name="brandId" referenced-column-name="id" on-delete="CASCADE" nullable="1"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="company" target-entity="Ivoz\Provider\Domain\Model\Company\Company" fetch="LAZY">
      <join-columns>
        <join-column name="companyId" referenced-column-name="id" on-delete="CASCADE" nullable="1"/>
      </join-columns>
    </many-to-one>
  </mapped-superclass>
</doctrine-mapping>
