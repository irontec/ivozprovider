<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <mapped-superclass name="Ivoz\Provider\Domain\Model\NotificationTemplate\NotificationTemplateAbstract" table="notification_template_abstract">
    <unique-constraints>
      <unique-constraint name="notificationTemplate_name_brand" columns="name,brandId"/>
    </unique-constraints>
    <field name="name" type="string" column="name" length="55" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="type" type="string" column="type" length="25" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">[enum:voicemail|fax|limit|lowbalance|invoice|callCsv|maxDailyUsage]</option>
      </options>
    </field>
    <many-to-one field="brand" target-entity="Ivoz\Provider\Domain\Model\Brand\BrandInterface" fetch="LAZY">
      <join-columns>
        <join-column name="brandId" referenced-column-name="id" on-delete="CASCADE" nullable="1"/>
      </join-columns>
    </many-to-one>
  </mapped-superclass>
</doctrine-mapping>
