<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <mapped-superclass name="Ivoz\Provider\Domain\Model\Carrier\CarrierAbstract" table="carrier_abstract">
    <unique-constraints>
      <unique-constraint name="carrier_nameBrand" columns="name,brandId"/>
    </unique-constraints>
    <field name="description" type="string" column="description" length="500" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="name" type="string" column="name" length="200" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="externallyRated" type="boolean" column="externallyRated" nullable="true">
      <options>
        <option name="default">0</option>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="balance" type="decimal" column="balance" precision="10" scale="4" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="calculateCost" type="boolean" column="calculateCost" nullable="true">
      <options>
        <option name="default">0</option>
        <option name="unsigned">1</option>
      </options>
    </field>
    <many-to-one field="brand" target-entity="Ivoz\Provider\Domain\Model\Brand\Brand" fetch="LAZY">
      <join-columns>
        <join-column name="brandId" referenced-column-name="id" on-delete="CASCADE" nullable=""/>
      </join-columns>
    </many-to-one>
    <many-to-one field="transformationRuleSet" target-entity="Ivoz\Provider\Domain\Model\TransformationRuleSet\TransformationRuleSet" fetch="LAZY">
      <join-columns>
        <join-column name="transformationRuleSetId" referenced-column-name="id" on-delete="SET NULL"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="currency" target-entity="Ivoz\Provider\Domain\Model\Currency\Currency" fetch="LAZY">
      <join-columns>
        <join-column name="currencyId" referenced-column-name="id" on-delete="SET NULL"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="proxyTrunk" target-entity="Ivoz\Provider\Domain\Model\ProxyTrunk\ProxyTrunk" fetch="LAZY">
      <join-columns>
        <join-column name="proxyTrunkId" referenced-column-name="id" on-delete="SET NULL"/>
      </join-columns>
    </many-to-one>
  </mapped-superclass>
</doctrine-mapping>
