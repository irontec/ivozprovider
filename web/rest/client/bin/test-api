#!/bin/bash

set -e

export SYMFONY_ENV=test

pushd /opt/irontec/ivozprovider/web/rest/client

    if [ "$1" != "--skip-db" ]; then
        # Prepare dataset
        bin/prepare-test-db
    fi

    # Access control tests
    SYMFONY_PHPUNIT_VERSION=8.5.8 vendor/bin/simple-phpunit

    # Integration tests
    vendor/bin/behat -f progress -o std -f junit -o results
popd
